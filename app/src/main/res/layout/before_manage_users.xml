<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login"
    android:background="@drawable/background_screens">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarMenu"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/colorPrimaryDarkBlue"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="Gerenciar Usuários"
            app:titleTextColor="@color/colorWhite"></androidx.appcompat.widget.Toolbar>

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:layout_marginTop="85dp">

        <Button
            android:id="@+id/buttonNewUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/technican_name"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="18dp"
            android:backgroundTint="@color/black_overlay"
            android:text="NOVO USUÁRIO"
            android:padding="35dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonViewUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonNewUser"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:textSize="18dp"
            android:backgroundTint="@color/black_overlay"
            android:text="VISUALIZAR USUÁRIOS"
            android:padding="35dp"
            android:textColor="@color/white" />

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>