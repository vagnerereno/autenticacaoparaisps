<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewCall"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginLeft="6dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="6dp"
    android:layout_marginBottom="3dp"
    android:padding="4dp"
    android:background="#fff">


    <RelativeLayout
        android:id="@+id/boxmyBudgetsRequestedContent"
        android:layout_width="match_parent"
        android:layout_height="90dp"

        >

        <ImageView
            android:id="@+id/photoView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/card_default_profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonEvaluation"
                android:layout_gravity="right"
                android:layout_marginTop="50dp"
                android:text="Avaliar"
                android:backgroundTint="@color/colorAlertOrange"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/txtViewNameTechnican"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dp"
            android:layout_toRightOf="@+id/photoView"
            android:text="Vagner Ereno Quincozes"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/txtViewCertificationTechnican"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewNameTechnican"
            android:layout_marginRight="6dp"
            android:layout_toRightOf="@+id/photoView"
            android:drawableLeft="@drawable/ic_call_check"
            android:text="Técnico Certificado" />

        <TextView
            android:id="@+id/textViewDataTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_toRightOf="@+id/photoView"
            android:text="01/01/1999 às 00:00"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>

